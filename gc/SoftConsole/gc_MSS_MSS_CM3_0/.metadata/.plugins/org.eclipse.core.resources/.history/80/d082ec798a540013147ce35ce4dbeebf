#ifndef __ATOMICS_H_
#define __ATOMICS_H_

static inline int ldrex(int *mem) {
	int result;
	asm("ldrex %0, %1"
	                      : "=r" (result)
	                      : "r" (mem)
	                      : "memory");
	return result;
}

static inline int strex(int *mem, int val) {
	int old_value;
	asm("strex %0, %1, [%2]" : "=X" (old_value), "=X" (val) : "X" (mem) : "memory");
	return old_value;
}

#endif
